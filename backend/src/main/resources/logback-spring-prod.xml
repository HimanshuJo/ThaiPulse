<configuration>
    <springProfile name="prod">
        <appender name="DEBUG_FILE" class="ch.qos.logback.core.FileAppender">
            <file>src/main/resources/debug.log</file>
            <append>true</append>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="DEBUG_FILE"/>
        </root>

        <logger name="com.thaipulse" level="DEBUG" additivity="false">
            <appender-ref ref="DEBUG_FILE"/>
        </logger>
    </springProfile>
</configuration>
